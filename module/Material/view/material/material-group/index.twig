{% import "macro" as macro %}
{% extends 'layout/layout' %}

{% block page %}

    <a href="{{ url('materials/groups/add_material_group') }}">
        <button class="btn btn-success">
            Add
        </button>
    </a>

    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Created</th>
                        <th>Modified</th>
                        <th>Name</th>
                        <th>Parent Group</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for materialGroup in pagination.getResult() %}
                        <tr>
                            <td>{{ materialGroup.getId() }}</td>
                            <td>{{ materialGroup.getCreated().format('Y-m-d H:i:d') }}</td>
                            <td>{{ materialGroup.getModified().format('Y-m-d H:i:d') }}</td>
                            <td>{{ materialGroup.getName() }}</td>
                            <td>{{ materialGroup.getParent().getName() }}</td>
                            <td>
                                <a href="{{ url('materials/groups/edit_material_group', {'id': materialGroup.getId()}) }}">
                                    Edit
                                </a>
                                <a href="{{ url('materials/groups/remove_material_group', {'id': materialGroup.getId()}) }}">
                                    remove
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            {{ macro.getPagination(pagination) }}
        </div>
    </div>

{% endblock %}